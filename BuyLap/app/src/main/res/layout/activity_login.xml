<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" android:background="#1F2341">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUYLAP"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" android:fontFamily="@font/zcool_regular" android:textSize="48sp"
        android:textColor="#FFFFFF" android:id="@+id/textView"/>

    <Button
        android:text="Sign Up"
        android:layout_width="300dp"
        android:layout_height="56dp" android:id="@+id/signUpButton"
        android:textSize="24sp" app:backgroundTint="#41CD7D"
        android:fontFamily="@font/zcool_regular" android:textAllCaps="false" app:cornerRadius="28dp"
        android:textColor="#1F2341" android:layout_marginTop="92dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>