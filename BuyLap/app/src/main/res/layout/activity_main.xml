<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" android:background="#1F2341">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUYLAP"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" android:fontFamily="@font/zcool_regular" android:textSize="48sp"
        android:textColor="#FFFFFF" android:id="@+id/textView"/>

    <ImageView
        android:layout_width="298dp"
        android:layout_height="380dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toTopOf="@+id/signUpButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:text="Sign Up"
        android:layout_width="300dp"
        android:layout_height="56dp" android:id="@+id/signUpButton"
        android:textSize="24sp" app:backgroundTint="#41CD7D"
        android:fontFamily="@font/zcool_regular" android:textAllCaps="false" app:cornerRadius="28dp"
        android:textColor="#1F2341" android:layout_marginTop="92dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="307dp"
        android:layout_height="56dp"
        android:fontFamily="@font/zcool_regular"
        android:text="Sign In"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:backgroundTint="#282C4C"
        app:cornerRadius="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signUpButton" />
    <Button
        android:text="Skip For now"
        android:layout_width="308dp"
        android:layout_height="55dp" android:id="@+id/button4"
        android:textSize="24sp"
        android:fontFamily="@font/zcool_regular" android:textAllCaps="false" app:cornerRadius="28dp"
        android:textColor="#FFFFFF" app:backgroundTint="#282C4C" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.497" android:layout_marginBottom="28dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>